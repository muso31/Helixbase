<?xml version="1.0"?>

<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
	<sitecore>
		<settings>
			<!--
        Enable original file extensions for media.
      -->
			<setting name="Media.RequestExtension" set:value="" />

			<!--
        Set a unique value for media hashing secret, which protects from malicious
        resize requests against the default Sitecore media handler.
      -->
			<setting name="Media.RequestProtection.SharedSecret" set:value="362d561ccf984d5086310ace4a7c1780" />
		</settings>
		<javaScriptServices>
			<!--
        Media URLs generated by headless applications require explicit whitelisting of
        their parameters, since they pass through the /-/jssmedia/ media handler,
        which does not use hash protection.
      -->
			<allowedMediaParams>
				<projectName__1>
					mw=1170,mh=402
				</projectName__1>
			</allowedMediaParams>
		</javaScriptServices>
	</sitecore>
</configuration>